{
    "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist", 
      "allowJs": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es6",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "types": ["jest", "node", "@testing-library/jest-dom"],
      "baseUrl": ".",
      "paths": {
        "assets": ["src/assets"],
        "assets/*": ["src/assets/*"]
      },
      "resolveJsonModule": true,
      "lib": ["dom", "esnext"]
    },
    "include": ["./src/**/*"]
  }